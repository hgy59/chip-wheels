+// enable overwrite of config file path by environment variable CHIP_CUSTOM_CONIFG_PATH
+// default is /tmp
+// patched to /data for homeassistant chip wheels
+// 
+std::string PosixConfig::GetConfigDataFile(const char * dataFile)
+{
+    const char * dir = getenv("CHIP_CUSTOM_CONIFG_PATH");
+
+    if (dir == nullptr)
+    {
+        // Use original path
+        return dataFile;
+    }
+
+    std::string customDir = dir;
+    if (customDir.empty())
+    {
+        return dataFile;
+    }
+
+    const char * fileName = strrchr(dataFile, '/');
+    if (fileName == nullptr)
+    {
+        // No path
+        return dataFile;
+    }
+
+    return customDir + fileName;
+}
